---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | date: '%Y-%m-%d' }}">{{ date | readableDate }}</time>
            {% if tags %}
                <div class="tags">
                    {% for tag in tags %}
                        <span class="tag">{{ tag }}</span>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>