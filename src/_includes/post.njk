---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1>{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | date: '%Y-%m-%d' }}">{{ date | readableDate }}</time>
            {% if primary_topic %}
                <span class="topic">{{ primary_topic }}</span>
            {% endif %}
            {% if difficulty_level %}
                <span class="difficulty">Difficulty: {{ difficulty_level }}/5</span>
            {% endif %}
        </div>
        
        {% if tags %}
        <div class="tags">
            {% for tag in tags %}
                <span class="tag">{{ tag }}</span>
            {% endfor %}
        </div>
        {% endif %}
        
        {% if summary %}
        <div class="summary">
            <p>{{ summary }}</p>
        </div>
        {% endif %}
    </header>
    
    <div class="post-content">
        {{ content | safe }}
    </div>
</article>