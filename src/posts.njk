---
layout: base.njk
title: All Posts
permalink: /posts/
---

<div class="posts-page">
    <h1>All Posts</h1>
    
    {% if collections.posts.length > 0 %}
        <div class="posts-list">
            {% for post in collections.posts %}
            <article class="post-preview">
                <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                {% if post.data.summary %}
                    <p class="summary">{{ post.data.summary }}</p>
                {% endif %}
                <div class="post-meta">
                    <time>{{ post.data.date | readableDate }}</time>
                    {% if post.data.primary_topic %}
                        <span class="topic">{{ post.data.primary_topic }}</span>
                    {% endif %}
                    {% if post.data.difficulty_level %}
                        <span class="difficulty">{{ post.data.difficulty_level }}/5</span>
                    {% endif %}
                </div>
                {% if post.data.tags %}
                    <div class="tags">
                        {% for tag in post.data.tags %}
                            <span class="tag">{{ tag }}</span>
                        {% endfor %}
                    </div>
                {% endif %}
            </article>
            {% endfor %}
        </div>
    {% else %}
        <p>No posts available yet.</p>
    {% endif %}
</div>